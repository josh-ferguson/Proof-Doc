<!DOCTYPE html>

<head>
<title>showWork</title>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta http-equiv="X-UA-Compatible" content="ie=edge" />


<link rel="stylesheet" href="pdfView.css">

</head>

<body>


  <section id="content1">
    <h1></h1>

    <div class="top-bar">
      <button type="button" class="btn" id="prev-page">prev page</button>
      <button type="button" class="btn" id="next-page">next page</button>
      <span class="page-info">page <span id="page-num"></span>of <span id="page-count"></span></span>
    </div>
    <canvas id="pdf-render"></canvas>



    <div class="displayReview">
      <h1>Reviews!</h1>
      <form class="displayReviewForm" action="/displayReview" method="post">
        <span class="review-info">Review <span id="review-num"></span> of <span id="review-count"></span></span>

        <label id="reviewedByType">Reviewed by:</label>
        <img id="reviewer" src="" alt="reviewer">

        <input type="button" onclick="nextRev()" name="next" value="next">
        <input type="button" onclick="prevRev()" name="prev" value="prev">
        <Textarea id="displayReviewTextarea" name="displayReviewText" rows="38" cols="10" wrap="hard" readonly></Textarea>
      </form>
    </div>


  </section>

  <footer><a id="footer" href="/myWork">Back to My Work page</a></footer>

  <script src="http://mozilla.github.io/pdf.js/build/pdf.js">

  </script>
  <script src="pdfViewer.js"></script>
  <script src="showWork.js"></script>

</body>
